<div class="mb-3">
     <label for="sort" class="form-label">Sortuj wg</label>
     <select name="sort" id="sort" class="form-control">
          <option value="">Domyślnie</option>
          <option value="name|1" <%- query.sort==='name|1' ? 'selected' : '' %>>A-Z</option>
          <option value="name|-1" <%- query.sort==='name|-1' ? 'selected' : '' %>>Z-A</option>
          <option value="employeesCount|1" <%- query.sort==='name|1' ? 'selected' : '' %>>Pracowników
               (rosnąco)</option>
          <option value="employeesCount|-1" <%- query.sort==='name|-1' ? 'selected' : '' %>>Pracowników
               (malejąco)</option>
     </select>
</div>
<div class="mb-3">
     <label for="countmin" class="form-label">Liczba pracowników (min)</label>
     <input type="number" value="<%- query.countmin%>" class="form-control" id="countmin" name="countmin">
</div>
<div class="mb-3">
     <label for="countmax" class="form-label">Liczba pracowników (max)</label>
     <input type="number" value="<%- query.countmax%>" class="form-control" id="countmax" name="countmax">
</div>
<button class="btn btn-primary mt-3">Zastosuj</button>